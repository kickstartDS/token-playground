{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "http://schema.kickstartds.com/tokens/brand.schema.json",
  "title": "kickstartDS Branding Design Tokens",
  "type": "object",
  "properties": {
    "color": {
      "type": "object",
      "properties": {
        "primary": {
          "$ref": "#/definitions/colorPair"
        },
        "onPrimary": {
          "$ref": "#/definitions/colorPair"
        },
        "bg": {
          "$ref": "#/definitions/colorPair"
        },
        "fg": {
          "$ref": "#/definitions/colorPair"
        },
        "link": {
          "$ref": "#/definitions/colorPair"
        },
        "positive": {
          "$ref": "#/definitions/colorPair"
        },
        "negative": {
          "$ref": "#/definitions/colorPair"
        },
        "informative": {
          "$ref": "#/definitions/colorPair"
        },
        "notice": {
          "$ref": "#/definitions/colorPair"
        },
        "scale": {
          "type": "object",
          "properties": {
            "1": {
              "$ref": "#/definitions/fraction"
            },
            "2": {
              "$ref": "#/definitions/fraction"
            },
            "3": {
              "$ref": "#/definitions/fraction"
            },
            "4": {
              "$ref": "#/definitions/fraction"
            },
            "5": {
              "$ref": "#/definitions/fraction"
            },
            "6": {
              "$ref": "#/definitions/fraction"
            },
            "7": {
              "$ref": "#/definitions/fraction"
            },
            "8": {
              "$ref": "#/definitions/fraction"
            },
            "9": {
              "$ref": "#/definitions/fraction"
            }
          }
        }
      }
    },
    "font": {
      "type": "object",
      "properties": {
        "family": {
          "type": "object",
          "properties": {
            "display": {
              "$ref": "#/definitions/fontFamily"
            },
            "copy": {
              "$ref": "#/definitions/fontFamily"
            },
            "interface": {
              "$ref": "#/definitions/fontFamily"
            },
            "mono": {
              "$ref": "#/definitions/fontFamily"
            }
          }
        },
        "weight": {
          "type": "object",
          "properties": {
            "light": {
              "$ref": "#/definitions/fontWeight"
            },
            "regular": {
              "$ref": "#/definitions/fontWeight"
            },
            "medium": {
              "$ref": "#/definitions/fontWeight"
            },
            "semi-bold": {
              "$ref": "#/definitions/fontWeight"
            },
            "bold": {
              "$ref": "#/definitions/fontWeight"
            }
          }
        },
        "size": {
          "type": "object",
          "properties": {
            "display": {
              "$ref": "#/definitions/size"
            },
            "copy": {
              "$ref": "#/definitions/size"
            },
            "interface": {
              "$ref": "#/definitions/size"
            },
            "mono": {
              "$ref": "#/definitions/size"
            }
          }
        }
      }
    },
    "spacing": {
      "type": "object",
      "properties": {
        "factor": {
          "$ref": "#/definitions/factor"
        },
        "shrink-factor": {
          "$ref": "#/definitions/number"
        },
        "grow-factor": {
          "$ref": "#/definitions/number"
        },
        "bp-factor": {
          "$ref": "#/definitions/number"
        }
      }
    },
    "border": {
      "type": "object",
      "properties": {
        "width": {
          "type": "object",
          "properties": {
            "default": {
              "$ref": "#/definitions/dimension"
            },
            "emphasized": {
              "$ref": "#/definitions/dimension"
            }
          }
        },
        "radius-factor": {
          "$ref": "#/definitions/factor"
        }
      }
    },
    "box-shadow": {
      "type": "object",
      "properties": {
        "blur-factor": {
          "$ref": "#/definitions/factor"
        },
        "opacity-factor": {
          "$ref": "#/definitions/factor"
        },
        "spread-factor": {
          "$ref": "#/definitions/factor"
        }
      }
    },
    "duration": {
      "type": "object",
      "properties": {
        "factor": {
          "$ref": "#/definitions/factor"
        }
      }
    },
    "_fontHref": {
      "type": "object",
      "additionalProperties": {
        "type": "string"
      }
    }
  },
  "required": ["color", "font", "spacing", "border", "box-shadow", "duration"],
  "additionalProperties": false,
  "definitions": {
    "color": {
      "type": "object",
      "properties": {
        "$type": {
          "const": "color"
        },
        "$value": {
          "type": "object",
          "properties": {
            "colorSpace": {
              "const": "srgb"
            },
            "components": {
              "type": "array",
              "prefixItems": [
                {
                  "type": "number",
                  "minimum": 0,
                  "maximum": 1,
                  "multipleOf": 0.01
                },
                {
                  "type": "number",
                  "minimum": 0,
                  "maximum": 1,
                  "multipleOf": 0.01
                },
                {
                  "type": "number",
                  "minimum": 0,
                  "maximum": 1,
                  "multipleOf": 0.01
                }
              ],
              "minItems": 3,
              "maxItems": 3
            }
          },
          "required": ["colorSpace", "components"]
        }
      }
    },
    "colorPair": {
      "type": "object",
      "properties": {
        "$root": {
          "$ref": "#/definitions/color"
        },
        "inverted": {
          "$ref": "#/definitions/color"
        }
      }
    },
    "fraction": {
      "type": "object",
      "properties": {
        "$type": {
          "const": "number"
        },
        "$value": {
          "type": "number",
          "minimum": 0,
          "maximum": 1,
          "multipleOf": 0.01
        }
      },
      "required": ["$type", "$value"]
    },
    "fontFamily": {
      "type": "object",
      "properties": {
        "$type": {
          "const": "fontFamily"
        },
        "$value": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      },
      "required": ["$type", "$value"]
    },
    "fontWeight": {
      "type": "object",
      "properties": {
        "$type": {
          "const": "fontWeight"
        },
        "$value": {
          "type": "integer"
        }
      },
      "required": ["$type", "$value"]
    },
    "dimension": {
      "type": "object",
      "properties": {
        "$type": {
          "const": "dimension"
        },
        "$value": {
          "type": "object",
          "properties": {
            "value": {
              "type": "number"
            },
            "unit": {
              "type": "string",
              "const": "px"
            }
          }
        }
      },
      "required": ["$type", "$value"]
    },
    "size": {
      "type": "object",
      "properties": {
        "base": {
          "$ref": "#/definitions/dimension"
        },
        "shrink-factor": {
          "$ref": "#/definitions/number"
        },
        "grow-factor": {
          "$ref": "#/definitions/number"
        },
        "bp-factor": {
          "$ref": "#/definitions/number"
        }
      }
    },
    "number": {
      "type": "object",
      "properties": {
        "$type": {
          "const": "number"
        },
        "$value": {
          "type": "number",
          "minimum": 0
        }
      },
      "required": ["$type", "$value"]
    },
    "factor": {
      "type": "object",
      "properties": {
        "$type": {
          "const": "number"
        },
        "$value": {
          "type": "number",
          "default": 1.5,
          "minimum": 1,
          "maximum": 2,
          "multipleOf": 0.01
        }
      },
      "required": ["$type", "$value"]
    }
  }
}
